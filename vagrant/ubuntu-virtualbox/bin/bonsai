#!/usr/bin/python

import os
import os.path
import re
import sys

def install_bonsai():
  print "Installing Bonsai"

  original_path = os.getcwd()

  os.chdir('/vagrant/server')
  os.system('npm install')

  os.chdir('/vagrant/client')
  os.system('npm install')
  os.system('bower install')

  os.chdir(original_path)

  pass

def build_bonsai():
  print "Building Bonsai"

  original_path = os.getcwd()

  os.chdir('/vagrant/server')
  os.system('grunt')

  os.chdir('/vagrant/client')
  os.system('gulp')

  os.chdir(original_path)

  pass

def start_bonsai():
  print "Starting Bonsai"

  original_path = os.getcwd()

  os.chdir('/vagrant/server')
  os.system('pm2 start pm2.json')

  os.chdir('/vagrant/client')
  os.system('pm2 start pm2.json')

  os.chdir(original_path)

  pass

def stop_bonsai():
  print "Stopping Bonsai"

  os.system('pm2 kill')

  pass

def watch_bonsai():
  print "Watching Bonsai"

  original_path = os.getcwd()

  # TODO: Server

  os.chdir('/vagrant/client')
  os.system('gulp watch &')

  os.chdir('/vagrant/server')
  os.system('gulp watch &')

  os.chdir(original_path)

  pass


def run_task(action):
  if action == "install":
    return install_bonsai()
  if action == "build":
    return build_bonsai()
  if action == "start":
    return start_bonsai()
  if action == "stop":
    return stop_bonsai()
  if action == "watch":
    return watch_bonsai()

  print "ERR: Unknown action %s" % (action)
  exit(-1)

if __name__ == "__main__":

  if len(sys.argv) == 1:
    print "Commands:"
    print "  install - Install Bonsai"
    print "  build   - Build Bonsai"
    print "  start   - Start Bonsai"
    print "  stop    - Stop Bonsai"
    print "  watch   - Build & Incremental Build for Bonsai"
    exit(0)

  if len(sys.argv) == 2:
    run_task(sys.argv[1])
    exit(0)

  print "USAGE: bonsai [action]"
  print "  If an action is provided it will be run, otherwise the actions will be listed."
  exit(-1)